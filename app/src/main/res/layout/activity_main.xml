<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_purple"
        android:text="@string/app_name"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="@font/fortuner_heavy_personal_use">
    </TextView>

    <TextView
        android:id="@+id/date_of_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date du jour :"
        android:textSize="30dp"
        android:textAlignment="center"
        android:fontFamily="@font/brlnsr"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/date_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date du jour :"
        android:textSize="25dp"
        android:textAlignment="center"
        android:fontFamily="@font/brlnsr"
        android:layout_marginTop="70dp">
    </TextView>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"></CalendarView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/app_title"
        android:layout_marginTop="357dp"
        android:nestedScrollingEnabled="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/baseline_add_24" />
</RelativeLayout>